<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - LinkHub</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/slate-bootstrap.css" rel="stylesheet" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("LinkHub", "Index", "Home", new { area = "Common" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", new { Controller = "Home", Area = "Common" })</li>
                    <li>@Html.ActionLink("Sign Up", "Index", new { Controller = "Register", Area = "Security" })</li>
                    <li>@Html.ActionLink("Browse URL", "Index", new { Controller = "BrowseUrl", Area = "Common" })</li>
                    <li>@Html.ActionLink("Quick URL Submit", "Index", new { Controller = "QuickURLSubmit", Area = "Common" })</li>

                    @if (User.Identity.IsAuthenticated) {
                                        <!--These are accessible by ADMIN-->
                        if (User.IsInRole("A")) {
                            <li>@Html.ActionLink("Category", "Index", new { Controller = "Category", Area = "Admin" })</li>
                            <li>@Html.ActionLink("All Categories", "Index", new { Controller = "ListCategory", Area = "Admin" })</li>
                            <li>@Html.ActionLink("All Users", "Index", new { Controller = "ListUser", Area = "Admin" })</li>
                            <li>@Html.ActionLink("Approve URL", "Index", new { Controller = "ApproveUrl", Area = "Admin" })</li>
                        }
                        if (User.IsInRole("A") | User.IsInRole("U")) {
                                        <!--These are accessible by both ADMIN and AUTHENTIC USER-->
                            <li>@Html.ActionLink("Submit URL", "Index", new { Controller = "Url", Area = "User" })</li>
                            <li>@Html.ActionLink("Log Out", "LogOut", new { Controller = "LogIn", Area = "Security" })</li>
                            <li> <a href="#"><b>User:</b> @User.Identity.Name</a></li>
                        }
                    }
                    else {
                        <li>@Html.ActionLink("Log In", "Index", new { Controller = "LogIn", Area = "Security" })</li>
                    }

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer>
            <p>&copy;Copyright @DateTime.Now.Year - LinkHub</p>
        </footer>
        <blockquote class="blockquote-reverse">
            <p>We work in the dark, to serve the light. We are assassins</p>
            <small><cite title="Source Title">Victori Ali Assassini</cite></small>
        </blockquote>
    </div>
   
    <script src="~/Scripts/jquery-2.2.4.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</body>
</html>